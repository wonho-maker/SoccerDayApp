<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"


    android:background="@color/drawer_menu_background_color"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.balysv.materialripple.MaterialRippleLayout

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:mrl_rippleHover="true"
        app:mrl_rippleDelayClick="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/drawer_menu_rowIcon"
        android:paddingLeft="16dp"
        android:src="@drawable/ic_schedule"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="메뉴 1"
        android:id="@+id/drawer_menu_rowText" />
    </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/drawer_menu_item_divider"
        android:id="@+id/drawer_menu_item_divider"
        android:visibility="invisible"/>

</LinearLayout>

