<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.balysv.materialripple.MaterialRippleLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/league_list_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:mrl_rippleOverlay="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleDelayClick="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff">

    <TextView
        android:id="@+id/league_list_expand_homeTeam_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:maxLines="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:text="홈 팀"/>

    <ImageView
        android:id="@+id/league_list_expand_homeTeam_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:src="@drawable/ic_favorite_star_fill"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_weight="2">

    <TextView
        android:id="@+id/league_list_expand_time_or_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="01:30"/>

    <TextView
        android:id="@+id/league_list_expand_match_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="경기 전"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/league_list_expand_awayTeam_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:src="@drawable/ic_favorite_star_fill"/>

    <TextView
        android:id="@+id/league_list_expand_awayTeam_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:maxLines="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="16dp"
        android:text="원정 팀"/>

        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>

