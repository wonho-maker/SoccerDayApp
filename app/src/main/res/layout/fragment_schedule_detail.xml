<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <TextView
        android:id="@+id/schedule_detail_league_title"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingLeft="16dp"
        android:textColor="#ff017665"
        android:background="#ff222b33"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center|left"
        android:text="리그 명"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#ff162029"
        android:layout_weight="2.5"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:layout_weight="3.5"
            android:weightSum="4">

            <ImageView
                android:id="@+id/schedule_detail_home_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:gravity="center|bottom"
                android:padding="5dp"
                android:src="@drawable/ic_favorite_star_fill"/>

            <TextView
                android:id="@+id/schedule_detail_home_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center|top"
                android:textColor="#ffffff"
                android:maxLines="2"
                android:text="홈 팀" />
         </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:weightSum="4">


<View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"/>
            <TextView
                android:id="@+id/schedule_detail_time_or_score"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="15sp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp"
                android:text="PM 21:05"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <TextView
                android:id="@+id/schedule_detail_match_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:background="#ff2d363f"
                android:text="경기 전"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="16dp"
            android:layout_weight="3.5"
            android:weightSum="4">

            <ImageView
                android:id="@+id/schedule_detail_away_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:gravity="center|bottom"
                android:padding="5dp"
                android:src="@drawable/ic_favorite_star_fill"/>

            <TextView
                android:id="@+id/schedule_detail_away_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center|top"
                android:textColor="#ffffff"
                android:text="어웨이 팀"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:orientation="vertical">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/schedule_detail_progress_wheel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="#ff45a0ff"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_spinSpeed="0.4"/>

    <WebView
        android:id="@+id/schedule_detail_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </WebView>

    </LinearLayout>
</LinearLayout>